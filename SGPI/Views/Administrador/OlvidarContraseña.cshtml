
@{
    ViewData["Title"] = "¿Olvidaste tu Contraseña?";
     Layout = "LayoutA";
}

<body style="background-color: #9A616D">

    <section class="vh-100" style="background-color: #9A616D;">
        <div class="container py-7 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-12">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-1">
                            <div class="col-md-8 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form>
                                    <div class="text-center">
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Sistema de Gestión de Posgrados de Ingeniería</span>
                                    </div>
                                    </div>
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Olvidar Contraseña</h5>

                                    <div class="form-outline mb-4">
                                        <input type="email" id="form2Example17" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example17">Usuario</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example27">Correo Electronico</label>
                                    </div>            
                                   
                                    <div class="text-center">
                                        <button style="background-color: #171718; color:white" id="ingresarbtn" type="submit" class="btn btn-outline-dark btn-block col-lg-3">Enviar</button>
                                        <a href="/Administrador/Login"><input class="btn btn-outline-dark btn-block col-lg-3 " style="background-color: #171718; color:white" type="button" value="Volver"></a>
                                  </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
